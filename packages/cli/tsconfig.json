{
	"compilerOptions": {
		"target": "es5",
    "module": "commonjs",
		"lib": ["dom", "es2017"],
		"allowJs": true,
		"checkJs": true,
		"jsx": "preserve",
		"declaration": false,
		"sourceMap": true,
		"noImplicitAny": false,
		"strictNullChecks": false,
		"noImplicitThis": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"baseUrl": "./",
		"moduleResolution": "node",
		"paths": {
			"*": ["*"],
			"@/assets/*": ["src/assets/*"],
			"@/components/*": ["src/components/*"],
			"@/pages/*": ["src/pages/*"],
			"@/styles/*": ["src/styles/*"],
			"@/services/*": ["src/services/*"],
			"@/store/*": ["src/store/*"],
			"@/utils/*": ["src/utils/*"],
			"@/layouts/*": ["src/layouts/*"]
		},
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"outDir": "./dist"
	},
	"include": ["src", "src/types"]
}
